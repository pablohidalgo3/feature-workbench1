import Layout from "../layouts/Layout.astro";
import { CALENDAR_API_ENDPOINT } from "astro:env/server";

const res = await fetch(CALENDAR_API_ENDPOINT);
const matches = await res.json();

// toDataURL como lo tenÃ­asâ€¦
async function toDataURL(url: RequestInfo | URL) {
  if (!url) return null;
  const imageRes = await fetch(url);
  if (!imageRes.ok) return null;
  const contentType = imageRes.headers.get("content-type") || "image/png";
  const arrayBuffer = await imageRes.arrayBuffer();
  const base64 = btoa(String.fromCharCode(...new Uint8Array(arrayBuffer)));
  return `data:${contentType};base64,${base64}`;
}

const matchesWithData = await Promise.all(
  matches.map(async (match: { team1Logo: any; team2Logo: any }) => ({
    ...match,
    team1Logo: await toDataURL(match.team1Logo.replace(/\d+px/, "100px")),
    team2Logo: await toDataURL(match.team2Logo.replace(/\d+px/, "100px")),
  }))
);

// 1) Formatter para la parte de fecha (May 4, 2025)
const dateFormatter = new Intl.DateTimeFormat("en-US", {
  timeZone: "Europe/Madrid",
  month: "long",
  day: "numeric",
  year: "numeric",
});

// 2) Formatter para hora + abreviatura de zona (19:00 CEST / CET)
const timeFormatter = new Intl.DateTimeFormat("en-US", {
  timeZone: "Europe/Madrid",
  hour: "2-digit",
  minute: "2-digit",
  hour12: false,
  timeZoneName: "short",
});

// 3) ReconversiÃ³n final
const now = new Date();
const localizedMatches = matchesWithData
  .map((match) => {
    const raw = String(match.date)
      .replace(" - ", " ")
      .replace(/UTC.*$/, "UTC");
    const d = new Date(raw);
    if (isNaN(d.getTime())) return null;

    // Obtener partes de la fecha para comparaciÃ³n de dÃ­as
    const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
    const matchDay = new Date(d.getFullYear(), d.getMonth(), d.getDate());

    // Si el partido es de un dÃ­a anterior al actual, no se muestra
    if (matchDay < today) return null;

    const datePart = dateFormatter.format(d);
    let timePart = timeFormatter.format(d);
    timePart = timePart.replace("GMT+2", "CEST").replace("GMT+1", "CET");

    // Determinar estado del partido
    const diffMinutes = (now.getTime() - d.getTime()) / 60000;
    let status = null;
    if (diffMinutes >= 0 && diffMinutes <= 50) {
      status = "LIVE";
    } else if (diffMinutes > 50) {
      status = "FINALIZED";
    }

    return {
      ...match,
      date: `${datePart} - ${timePart}`,
      dateISO: d.toISOString(), // guarda la fecha en formato ISO vÃ¡lido
      status,
    };
  })
  .filter(Boolean); // elimina partidos que sean null (anteriores al dÃ­a actual)

function generateGoogleCalendarUrl(match: {
  team1: string;
  team2: string;
  tournament: { name: string };
  bo: string;
  dateISO: string;
  streams: { twitch?: string | URL | null; youtube?: string | URL | null };
}) {
  const startDate = new Date(match.dateISO);
  const endDate = new Date(startDate.getTime() + 60 * 60 * 1000); // 1h

  const formatDate = (d: Date) =>
    d.toISOString().replace(/[-:]/g, "").split(".")[0] + "Z";

  const startStr = formatDate(startDate);
  const endStr = formatDate(endDate);

  const title = `G2 vs ${match.team2} (${match.tournament.name})`;
  const details = `Best of ${match.bo}. Watch live on ${match.streams.twitch || match.streams.youtube || "Twitch/YouTube"}`;
  const location = "Online";

  return `https://www.google.com/calendar/render?action=TEMPLATE&text=${encodeURIComponent(title)}&dates=${startStr}/${endStr}&details=${encodeURIComponent(details)}&location=${encodeURIComponent(location)}&sf=true&output=xml`;
}

function generateICS(match: {
  team1: string;
  team2: string;
  tournament: { name: string };
  bo: string;
  dateISO: string;
  streams: {
    twitch?: string | URL | null;
    youtube?: string | URL | null;
  };
  id?: string;
}) {
  const startDate = new Date(match.dateISO);
  const endDate = new Date(startDate.getTime() + 60 * 60 * 1000);

  const formatICSDate = (date: Date) =>
    date.toISOString().replace(/[-:]/g, "").split(".")[0] + "Z";

  const uid =
    match.id || `${match.team1}-${match.team2}-${formatICSDate(startDate)}`;

  const summary = `G2 vs ${match.team2} (${match.tournament.name})`;
  const description = `Best of ${match.bo}. Watch live on: ${(
    match.streams.twitch ||
    match.streams.youtube ||
    "Twitch/YouTube"
  ).toString()}`;
  const location = "Online";

  return `
BEGIN:VCALENDAR
VERSION:2.0
CALSCALE:GREGORIAN
METHOD:PUBLISH
PRODID:-//G2 Esports//Match Calendar//EN
BEGIN:VEVENT
UID:${uid}
SUMMARY:${summary}
DTSTAMP:${formatICSDate(new Date())}
DTSTART:${formatICSDate(startDate)}
DTEND:${formatICSDate(endDate)}
DESCRIPTION:${description}
LOCATION:${location}
STATUS:CONFIRMED
SEQUENCE:0
TRANSP:OPAQUE
END:VEVENT
END:VCALENDAR`.trim();
}

---

<Layout
  title="G2 History Calendar"
  description="Consulta el calendario de partidos de G2 Esports."
  image="/g2_logo.png"
  url="https://www.g2leaguehistory.online/calendar"
>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-14">Upcoming matches</h1>

    <div
      class="grid gap-6 place-content-center"
      style="grid-template-columns: repeat(auto-fit, minmax(320px, 800px)); margin-inline: auto;"
    >
      {
        localizedMatches.map(
          (match: {
            tournament: { name: string; url: string | URL | null | undefined };
            bo: string;
            team1Logo: any;
            team1: string;
            team2Logo: any;
            team2: string;
            date: string;
            dateISO: string;
            status?: "LIVE" | "FINALIZED" | null;
            streams: {
              twitch?: string | URL | null;
              youtube?: string | URL | null;
            };
          }) => (
            <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
              <div class="p-6">
                <div class="flex justify-between items-center mb-4">
                  <div class="text-sm font-semibold text-gray-400">
                    {match.tournament.name}
                  </div>
                  <div class="text-xs bg-gray-700 rounded-full px-3 py-1">
                    {match.bo.toUpperCase()}
                  </div>
                </div>

                <div class="flex justify-between items-center mb-6">
                  <div class="flex flex-col items-center w-2/5">
                    <img
                      src={match.team1Logo || "/placeholder.svg"}
                      alt={String(match.team1)}
                      class="size-16 object-contain mb-2"
                    />
                    <span class="font-bold text-xl">{match.team1}</span>
                  </div>

                  <div class="text-center">
                    <span class="text-xl font-bold text-gray-400">VS</span>
                  </div>

                  <div class="flex flex-col items-center w-2/5">
                    <img
                      src={match.team2Logo || "/placeholder.svg"}
                      alt={String(match.team2)}
                      class="size-16 object-contain mb-2"
                    />
                    <span class="font-bold text-xl">{match.team2}</span>
                  </div>
                </div>

                <div class="border-t border-gray-700 pt-4">
                  <div class="text-sm text-gray-400 mb-3">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-4 w-4 inline mb-1 mr-1"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                      />
                    </svg>
                    {match.date}
                  </div>

                  <div class="flex justify-between items-center flex-wrap gap-2 mt-3">
                    <div class="flex flex-wrap gap-2">
                      {match.streams.twitch && (
                        <a
                          href={match.streams.twitch}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="bg-purple-700 hover:bg-purple-600 text-white text-xs font-semibold py-1 px-3 rounded-full transition-colors duration-300"
                        >
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4 inline mr-1"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                          >
                            <path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714z" />
                          </svg>
                          Twitch
                        </a>
                      )}

                      {match.streams.youtube && (
                        <a
                          href={match.streams.youtube}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="bg-red-700 hover:bg-red-600 text-white text-xs font-semibold py-1 px-3 rounded-full transition-colors duration-300"
                        >
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-4 w-4 inline mr-1"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                          >
                            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                          </svg>
                          YouTube
                        </a>
                      )}
                    </div>

                    <a
                      href={generateGoogleCalendarUrl(match)}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="bg-blue-600 hover:bg-blue-500 text-white text-xs font-semibold py-1 px-3 rounded-full transition-colors duration-300"
                    >
                      ðŸ“… Add to Google Calendar
                    </a>

                    <a
                      href={`data:text/calendar;charset=utf-8,${encodeURIComponent(generateICS(match))}`}
                      download={`g2_vs_${match.team2}.ics`}
                      class="bg-gray-700 hover:bg-gray-600 text-white text-xs font-semibold py-1 px-3 rounded-full transition-colors duration-300"
                    >
                      ðŸ“¥ Download .ics
                    </a>
                  </div>

                  {match.status === "LIVE" && (
                    <div class="mt-3 text-red-500 font-bold text-sm flex items-center">
                      <span class="animate-ping inline-flex h-2 w-2 rounded-full bg-red-500 mr-2" />
                      LIVE!
                    </div>
                  )}

                  {match.status === "FINALIZED" && (
                    <div class="mt-3 text-gray-400 font-semibold text-sm">
                      FINALIZED
                    </div>
                  )}

                  {match.tournament.url && (
                    <a
                      href={match.tournament.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="block mt-3 text-xs text-gray-400 hover:text-white transition-colors duration-300"
                    >
                      View tournament details â†’
                    </a>
                  )}
                </div>
              </div>
            </div>
          )
        )
      }
    </div>

    {
      matches.length === 0 && (
        <div class="text-center py-10">
          <p class="text-xl text-gray-400">
            No upcoming matches scheduled at the moment.
          </p>
          <p class="mt-2">Check back later for updates.</p>
        </div>
      )
    }
  </main>
</Layout>

<style>
  /* Additional custom styles if needed */
  main {
    min-height: 70vh;
  }
